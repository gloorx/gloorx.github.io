---
layout: null
---
{% assign first = true %}
[

{% for post in site.posts %}
    {% if post.title != null and post.title != empty %}
    {% unless first %},{% endunless %}{

        "title": "{{post.title | strip_html | strip_newlines | remove_chars | escape }}",
        "content": "{{post.content | strip_html | strip_newlines | remove_chars | escape }}",
        "link": "{{ site.baseurl }}{{ post.url }}",
        "date": "{{ post.date | date: '%b %-d, %Y' }}",
        "snippet": "{{ post.content | strip_html | strip_newlines | remove_chars | escape | truncate: 250 }}",
        "search_omit": "{{ post.search_omit }}"

    }
    {% assign first = false %}
    {% endif %}
{% endfor %}

]